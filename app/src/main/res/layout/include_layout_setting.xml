<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="600dp"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical"
    android:id="@+id/linear_layout_setting"
    >

    <RelativeLayout
        android:layout_width="600dp"
        android:layout_height="30dp"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:text="Setting"
            android:textColor="@color/white"
            />
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            >
            <Button
                android:id="@+id/button_setting_close"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/button_click_reverse"
                />
            <ImageView
                android:id="@+id/image_setting_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/red"
            />

    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:paddingLeft="50dp"
        >

        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="275dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/layout_2"
            android:paddingLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"

                />

            <EditText
                android:id="@+id/edit_ip_1"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:textColor="#000000"
                android:background="@drawable/edit_text_style"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:ems="10"
                />

            <EditText
                android:id="@+id/edit_ip_2"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:textColor="#000000"
                android:background="@drawable/edit_text_style"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:ems="10" />

            <EditText
                android:id="@+id/edit_ip_3"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:background="@drawable/edit_text_style"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:ems="10" />


            <EditText
                android:id="@+id/edit_ip_4"
                android:layout_width="45dp"
                android:layout_height="30dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:background="@drawable/edit_text_style"
                android:gravity="center"
                android:ems="10" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_2"
            android:layout_width="275dp"
            android:layout_height="match_parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/layout_1"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="60dp"
                android:layout_gravity="center"
                android:text="PORT" />

            <EditText
                android:id="@+id/edit_port"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/edit_text_style"
                android:ems="10" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:paddingLeft="50dp">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle ID"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                />

            <EditText
                android:id="@+id/edit_vehicle_id"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:textColor="#000000"
                android:background="@drawable/edit_text_style"
                android:layout_gravity="center"
                android:gravity="center"
                android:ems="10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="15dp"
            >

        </LinearLayout>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="50dp"
            >



        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:paddingLeft="50dp"
        >

        <Button
            android:id="@+id/button_setting_save"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:text="save"
            android:textSize="20dp"
            android:gravity="center"
            android:foregroundGravity="center"
            android:background="@drawable/button_click_save"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginLeft="75dp"
            />

    </LinearLayout>


</LinearLayout>